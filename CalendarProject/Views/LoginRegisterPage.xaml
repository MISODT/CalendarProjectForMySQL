<Page x:Class="CalendarProject.Views.LoginRegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CalendarProject.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginRegisterPage"
      Background="Bisque">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="welcomeLabel" Grid.Row="0" Text="Добро пожаловать!" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" Margin="20"/>
        <Button x:Name="goToLoginButton" Grid.Row="1" Click="goToLoginButton_Click" Background="AliceBlue" Width="200" Height="60" Content="Вход" FontSize="20" FontWeight="Bold"/>
        <Button x:Name="goToRegisterButton" Grid.Row="2" Click="goToRegisterButton_Click" Background="AliceBlue" Width="200" Height="60" Content="Регистрация" FontSize="20" FontWeight="Bold"/>
    </Grid>
</Page>
